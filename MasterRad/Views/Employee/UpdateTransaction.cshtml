@model MasterRad.ViewModels.UpdateTransactionViewModel

@{
    ViewBag.Title = "Update Transaction";
}

<h2>Update Transaction</h2>

@if(ViewBag.Update!=null)
{
    <div class="success">
        <h1>@ViewBag.Update</h1>
    </div>
}

