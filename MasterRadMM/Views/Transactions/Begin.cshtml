@model MasterRadMM.ViewModels.BeginTransactionViewModel

@{
    ViewData["Title"] = "Begin";
}

<h1>Begin</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Begin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TransactionId" class="control-label"></label>
                <input asp-for="TransactionId" class="form-control" readonly />
                <span asp-validation-for="TransactionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourierId" class="control-label"></label>
                @Html.DropDownListFor(x => x.CourierId, ViewBag.AvailableCouriers as SelectList, "--Select Courier--", htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="CourierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Begin" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
